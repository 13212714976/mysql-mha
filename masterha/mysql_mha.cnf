[server default]
user=monitor
password=letian318

#mha manager工作目录
manager_workdir=/opt/module/mysql_mha
manager_log=/opt/module/mysql_mha/manager.log
remote_workdir=/opt/module/mysql_mha

#ssh uer
ssh_user=root

#replication user
repl_user=repl
repl_password=repl
ping_interval=1
master_binlog_dir=/data/mysql/mysql3306/logs
master_ip_failover_script=/etc/masterha/master_ip_failover
secondary_check_script=/usr/bin/masterha_secondary_check -s 192.168.56.200 -s 192.168.56.201

[server1]
hostname=node1
master_binlog_dir = /data/mysql/mysql3306/logs
candidate_master = 1
check_repl_delay = 0     #用防止master故障时，切换时slave有延迟，卡在那里切不过来。

[server2]
hostname=node2
master_binlog_dir=/data/mysql/mysql3306/logs
candidate_master=1
check_repl_delay=0


